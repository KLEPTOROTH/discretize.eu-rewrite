---
import PROFESSIONS, { type ProfessionTypes } from "@gw2-ui/data/professions";
import BuildsPage from "@components/pages/BuildsPage/BuildsPage.astro";

interface Props {
  profession: ProfessionTypes;
}

export async function getStaticPaths() {
  return Object.keys(PROFESSIONS).map((prof) => ({
    params: {
      profession: prof.toLowerCase(),
    },
    props: {
      profession: prof,
    },
  }));
}
const { profession } = Astro.props;
---

<BuildsPage professions={[profession]} />
